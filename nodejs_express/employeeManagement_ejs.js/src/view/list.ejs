<html>
<head>
    <title>users Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

</head>
<body>
<h1>User list</h1>
<a href="/create" class="btn btn-primary">Create new user</a>




<table class="table table-dark table-striped mt-4" >
    <thead>
    <tr>
        <th scope="col">STT</th>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th scope="col">PhoneNumber</th>
        <th scope="col">Address</th>
        <th colspan="2">Action</th>
    </tr>
    </thead>
    <% for (let i = 0;i < users.length;i++) {%>
    <tr>
        <td><%=i + 1%></td>
        <td><%=users[i].name%></td>
        <td><%=users[i].address%></td>
        <td><%=users[i].email%></td>
        <td><img src="<%=users[i].avatar %>" width="100px"></td>
        <td><a href="/user/edit/<%=users[i].id%>" class="btn btn-primary">Edit</a>
            <a href="/user/delete/<%=users[i].id%>" class=" btn btn-danger">Delete</a></td>
    </tr>


    <%}%>


</table>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>

</body>
</html>